  <context:annotation-config />
  <context:component-scan base-package="${package}"/>

  <jaxrs:server id="testServices" address="/testServices">

    <jaxrs:serviceBeans>
      <ref bean="helloService${symbol_pound}default"/>
    </jaxrs:serviceBeans>

   </jaxrs:server>

